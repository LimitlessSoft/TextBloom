{
  "name": "TextBloom",
  "description": "Beautify your text with single click using AI",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://api.openai.com/"
  ]
}
